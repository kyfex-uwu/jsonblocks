{

		"_comment": "everything here is optional except for blockName, and it is the default. (unless marked otherwise)",
		"_comment": "for example: if you leave out slipperiness, it will be automatically set to 0.6",
		"_comment": "the fields marked with OR mean you can give it either data type",

	"namespace": "m3we",
	"blockName": "name", REQUIRED

	"hardness": 0.0,
	"resistance": 0.0,
	"slipperiness": 0.6,
	"jumpMultiplier": 1.0,
	"speedMultiplier": 1.0,
	"sounds": "STONE",
	"isOpaque":true,
	"luminance": 0 OR "script:(state) returnsNumber",
	"mapColor": "CLEAR",
	"drops": "EMPTY",
	"isToolRequired": false,
	"ticksRandomly": false,
	"isAir": false,
	"isCollidable":true,
	"blockCollisionCanResize": false,
	"isSolidWhen": true OR "script:(state, world, pos) returnsBoolean",
	"allowsSpawningWhen": true OR "script:(state, world, pos) returnsBoolean",
	"visionBlockedWhen": false OR "script:(state, world, pos) returnsBoolean",
	"suffocatesWhen": false OR "script:(state, world, pos) returnsBoolean",
	"emissiveLightingWhen": false OR "script:(state, world, pos) returnsBoolean",
	"postProcessWhen": false OR "script:(state, world, pos) returnsBoolean",

	"blockStates": {
		"int_prop":{
			"type": "int",
			"min": 1,
			"max": 4,
			"default": 2
		},
		"bool_prop":{
			"type": "boolean",
			"default": true
		},
		"enum_prop": {
			"type": "enum",
			"values": ["valueone","valuetwo","etc"]
		}
	}, (defaults to no blockstates)

	"blockShape": [
		[0,0,0,1,0.5,1],
		[0.375,0.5,0.375,0.625,0.75,0.625],
		...
	] OR "script:(state, world, pos, context) returnsTable", (defaults to no blockshape)
	"outlineShape": [
		[0,0,0,1,0.5,1],
		[0.375,0.5,0.375,0.625,0.75,0.625],
		...
	] OR "script:(state, world, pos, context) returnsTable", (if outlineShape is not specified, it defaults to blockShape)

	"script": "template-script" (defaults to no script)
}
